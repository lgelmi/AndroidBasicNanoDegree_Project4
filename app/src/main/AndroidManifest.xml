<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.ferdecavall">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ferdecavall"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ferdecavall"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SongActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName="com.example.android.ferdecavall.MainActivity"
            android:theme="@style/SongTheme">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />

        </activity>
    </application>

</manifest>